            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.6.3</version>
                <configuration>
                    <name>Autovault</name>
                    <appVersion>${project.version}</appVersion>
                    <runtimeImage>${java.home}</runtimeImage>
                    <input>${project.build.directory}</input>
                    <mainJar>${project.build.directory}/${project.build.finalName}.jar</mainJar>
                    <modulePaths>
                        <modulePath>${project.build.directory}</modulePath>
                    </modulePaths>
                    <mainClass>com.autovault.Main</mainClass>
                    <destination>${project.build.directory}/dist</destination>
                    <javaOptions>
                        <option>--enable-preview</option>
                        <option>-Dfile.encoding=UTF-8</option>
                    </javaOptions>
                </configuration>

                <executions>
                    <execution>
                        <id>mac</id>
                        <configuration>
                            <icon>icons/Icon.ico</icon>
                        </configuration>
                    </execution>
                    <execution>
                        <id>win</id>
                        <configuration>
                            <icon>icons/Icon.ico</icon>
                            <winMenu>true</winMenu>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>obfuscate</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.wvengen</groupId>
                        <artifactId>proguard-maven-plugin</artifactId>
                        <executions>
